# Local Development Environment
# This file is used for local development with Mailpit for email testing

ENV=development
APP_NAME=Ethos
APP_VERSION=1.0.0

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgres://ethos_user:ethos_password@localhost:5432/ethos?sslmode=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_TIME=5m
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# JWT Configuration
JWT_ACCESS_SECRET=local-access-secret-key-change-in-production
JWT_REFRESH_SECRET=local-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=336h

# OpenTelemetry (Optional for local development)
OTEL_SERVICE_NAME=ethos-api-local
JAEGER_URL=http://localhost:14268/api/traces
OTEL_ENABLED=false

# Email Configuration - Local Mailpit
MAILPIT_ENABLED=true
MAILPIT_SMTP_HOST=localhost
MAILPIT_SMTP_PORT=1025
MAILPIT_FROM_EMAIL=noreply@ethos.test

# Email Checker (Optional - leave empty for local)
CHECKER_API_KEY=
CHECKER_BASE_URL=https://api.checker.com
CHECKER_TIMEOUT=5s
CHECKER_RETRIES=2

# Email Service (Optional - leave empty, use Mailpit instead)
EMAILIT_API_KEY=
EMAILIT_BASE_URL=https://api.emailit.com
EMAILIT_TIMEOUT=10s
EMAILIT_RETRIES=2

# gRPC Configuration (Local)
GRPC_FEEDBACK_ENDPOINT=localhost:50051
GRPC_DASHBOARD_ENDPOINT=localhost:50052
GRPC_NOTIFICATIONS_ENDPOINT=localhost:50053
GRPC_PEOPLE_ENDPOINT=localhost:50054
GRPC_TIMEOUT=5s
GRPC_RETRIES=3
GRPC_ENABLED=false
GRPC_FEEDBACK_PROTOCOL=rest
GRPC_DASHBOARD_PROTOCOL=rest
GRPC_NOTIFICATIONS_PROTOCOL=rest
GRPC_PEOPLE_PROTOCOL=rest

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000,http://localhost:3000

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_ANALYTICS=true

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Development Settings
DEBUG=true
DEV_MODE=true
