# Production Environment
# This file is used for production deployments

ENV=production
APP_NAME=Ethos
APP_VERSION=1.0.0

# Server Configuration (Production)
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=https://ethos.example.com

# Database Configuration (Production PostgreSQL - update with actual credentials)
DATABASE_URL=postgres://prod_user:CHANGE_ME_PROD_PASSWORD@prod-db.example.com:5432/ethos?sslmode=require
DB_MAX_CONNECTIONS=50
DB_MAX_IDLE_TIME=10m
DB_CONN_MAX_LIFETIME=2h

# Redis Configuration (Production)
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@prod-redis.example.com:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0
REDIS_ENABLED=true

# JWT Configuration (Production - MUST change these!)
JWT_ACCESS_SECRET=CHANGE_ME_PROD_ACCESS_SECRET_KEY_WITH_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_ME_PROD_REFRESH_SECRET_KEY_WITH_RANDOM_STRING
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=336h

# OpenTelemetry (Production)
OTEL_SERVICE_NAME=ethos-api-prod
JAEGER_URL=http://prod-jaeger.example.com:14268/api/traces
OTEL_ENABLED=true

# Email Configuration - Production Emailit Service
MAILPIT_ENABLED=false
MAILPIT_SMTP_HOST=
MAILPIT_SMTP_PORT=
MAILPIT_FROM_EMAIL=

# Email Checker (Optional - API validation)
CHECKER_API_KEY=your-prod-checker-api-key
CHECKER_BASE_URL=https://api.checker.com
CHECKER_TIMEOUT=5s
CHECKER_RETRIES=2

# Email Service (Production)
EMAILIT_API_KEY=your-prod-emailit-api-key
EMAILIT_BASE_URL=https://api.emailit.com
EMAILIT_TIMEOUT=10s
EMAILIT_RETRIES=2

# gRPC Configuration (Production)
GRPC_FEEDBACK_ENDPOINT=feedback-service.example.com:50051
GRPC_DASHBOARD_ENDPOINT=dashboard-service.example.com:50052
GRPC_NOTIFICATIONS_ENDPOINT=notifications-service.example.com:50053
GRPC_PEOPLE_ENDPOINT=people-service.example.com:50054
GRPC_TIMEOUT=5s
GRPC_RETRIES=3
GRPC_ENABLED=true
GRPC_FEEDBACK_PROTOCOL=grpc
GRPC_DASHBOARD_PROTOCOL=grpc
GRPC_NOTIFICATIONS_PROTOCOL=grpc
GRPC_PEOPLE_PROTOCOL=grpc

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ALLOWED_ORIGINS=https://ethos.example.com,https://api.ethos.example.com

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_ANALYTICS=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=true

# Production Settings
DEBUG=false
DEV_MODE=false
